 <% @title = 'Sign Up' %>

<h2>Create a new account</h2>

<div class="container">
  <div class="form-row form-horizontal form-element">

    <form action="/sign_up" method="POST" class="form-group">
      <div class="form-group row">
        <label for="username" class="col-sm-6 col-form-label">Username</label>
        <input type="text" name="username" class="col-sm-6 form-control" placeholder="blogger123"><br>
      </div>

      <div class="form-group row">
        <label for="password" class="col-sm-6 col-form-label">Password</label>
        <input type="password" name="password" class="col-sm-6 form-control" placeholder="**********"><br>
      </div>

      <div class="form-group row">
        <label for="confirm_password" class="col-sm-6 col-form-label">Confirm Password</label>
        <input type="password" name="confirm_password" class="col-sm-6 form-control" placeholder="**********"><br>
      </div>
        
      <div class="form-group row">
        <label for="first_name" class="col-sm-6 col-form-label">First Name</label>
        <input type="text" name="first_name" class="col-sm-6 form-control" placeholder="John"><br>
      </div>
        
      <div class="form-group row">
        <label for="last_name" class="col-sm-6 col-form-label">Last Name</label>
        <input type="text" name="last_name" class="col-sm-6 form-control"  placeholder="Doe"><br>
      </div>
        
      <div class="form-group row">
        <label for="email" class="col-sm-6 col-form-label">Email Address</label>
        <input type="email" name="email" class="col-sm-6 form-control" placeholder="johndoe@email.com"><br>
      </div>
        
      <div class="form-group row">
        <label for="birthday" class="col-sm-6 col-form-label">Birthday</label>
        <input type="date" name="birthday" class="col-sm-6 form-control"><br>
      </div>

      <div class="form-group row">
        <a href="/">
          <button type="button" action="/" name="cancel" class="btn btn-outline-secondary btn-sm current_btn">
            Cancel
          </button>
        </a>

        <button type="submit" name="sign_up" class="btn btn-outline-secondary btn-sm current_btn">
          Create Account
        </button>
      </div>
    </form>

  </div>

  <p class="center">Already have an account? <a href="/log_in">Log in</a>.</p>
  
</div>
