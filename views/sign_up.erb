<% @title = 'Sign Up' %>

<h2>Create a new account</h2>

<div class="container">
  <div class="form-row form-horizontal form-element">

    <form action="/sign_up" method="POST" class="form-group" id="form">
      <div class="form-group row">
        <label for="username" class="col-sm-6 col-form-label">Username</label>
        <input type="text" name="username" class="col-sm-6 form-control" placeholder="blogger123" required><br>
      </div>

      <div class="form-group row">
        <label for="password" class="col-sm-6 col-form-label">Password</label>
        <input type="password" name="password" class="col-sm-6 form-control" id="password" placeholder="**********" required><br>
      </div>
      <div class="form-group row">
        <label for="confirm_password" class="col-sm-6 col-form-label">Confirm Password</label>
        <input type="password" name="confirm_password" class="col-sm-6 form-control" id="password_again" placeholder="**********"><br>
      </div>
      <div id="pw_error" class="small-text align-right red hidden">
        Passwords don't match!
      </div>
        
      <div class="form-group row">
        <label for="first_name" class="col-sm-6 col-form-label">First Name</label>
        <input type="text" name="first_name" class="col-sm-6 form-control" placeholder="John" required><br>
      </div>
        
      <div class="form-group row">
        <label for="last_name" class="col-sm-6 col-form-label">Last Name</label>
        <input type="text" name="last_name" class="col-sm-6 form-control"  placeholder="Doe" required><br>
      </div>
        
      <div class="form-group row">
        <label for="email" class="col-sm-6 col-form-label">Email Address</label>
        <input type="email" name="email" class="col-sm-6 form-control" placeholder="johndoe@email.com" required><br>
      </div>
        
      <div class="form-group row">
        <label for="birthday" class="col-sm-6 col-form-label">Birthday</label>
        <input type="date" name="birthday" class="col-sm-6 form-control" required><br>
      </div>

      <div class="form-group row">
        <a href="/">
          <button type="button" action="/" name="cancel" class="btn btn-outline-secondary btn-sm current_btn">
            Cancel
          </button>
        </a>

        <button type="submit" name="sign_up" id="create_account" class="btn btn-outline-success btn-sm current_btn">
          Create Account
        </button>
      </div>
    </form>

  </div>
  
  <p class="center">
    Facebook 
    <!-- fb Login Button social plugin uses the JavaScript SDK and triggers the FB.login() function when clicked -->
    <fb:login-button scope="public_profile,email" autologoutlink="true" onlogin="checkLoginState();">
    </fb:login-button>
    <!-- fb status display -->
    <div id="status" class="center">
    </div> 
     
  </p>

  <p class="center">Already have an account? <a href="/log_in">Log in</a>.</p>

</div>
