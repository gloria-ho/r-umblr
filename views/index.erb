<% @title = 'Rumblr Blog' %>

<h2>Welcome to Rumblr.</h2>

<% unless @user.nil? %>
<!-- until user is logged out, in show feed -->

  <div class="row">
    <div class="col-12">
      
      <h2>Recent Posts</h2>

      <ul class="posts">
        <% unless @posts.nil? %>
          <% @posts.each do |post|%>
            <li>
              <p class="bold">
                <%= post[:title] %>
              </p>
              <p>
                <%= post[:post] %>
              </p>
              <p class="small-text align-right">
                <span class="bold">Published:</span> <%= post[:created_at].strftime('%Y-%m-%d %H:%M:%S') %><br>
                <span class="bold">Last Updated:</span> <%= post[:updated_at].strftime('%Y-%m-%d %H:%M:%S') %>
              </p>
              <p>
                <!-- LIKE BUTTON!? -->
              </p>
            </li>
          <% end %> 

        <% else %>
          <h4>You have no life ðŸ˜¢ Let's get started! Hit the 'Create New Post' button to create a new entry.</h4>
        <% end %>
      </ul>

    </div>
  </div>

<% else %>

<!-- if user is not logged, in show login features -->
  <h3>Let's get started!</h3>

  <div class="center">
    <a href="/sign_up">
      <button type="submit" name="sign_up" class="btn btn-outline-secondary btn-sm current_btn">
        Sign Up
      </button>
    </a>

    <a href="/log_in">
      <button type="submit" name="log_in" class="btn btn-outline-secondary btn-sm current_btn">
        Log In
      </button>
    </a>
  </div>

<% end %>