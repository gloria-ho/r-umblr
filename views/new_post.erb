<% @title = 'New Post' %>

<div class="post-element">

  <div class="row">
    <div class="col-12">
      <h2>Create a new post</h2>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <form action="/new_post" method="POST">

        <div class="row">
          <div class="col-12">
            <label for="title">Title</label>
            <input type="text" name="title" class="form-control">
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <label for="">Post</label>
            <textarea cols="30" rows="10" name="post" class="form-control"></textarea>
          </div>
        </div>

        <div class="row">
          <div class="col-12">
            <a href="/">
              <button type="button" action="/" name="cancel" class="btn btn-outline-secondary btn-sm current_btn">
                Cancel
              </button>
            </a>

            <button type="submit" name="sign_up" class="btn btn-outline-success btn-sm current_btn">
              Publish Post
            </button>
          </div>
        </div>

      </form>
    </div>
  </div>
  
</div>